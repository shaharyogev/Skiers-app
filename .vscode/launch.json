    "version": "0.2.0",
    "configurations": [

        {
            "type": "node",
            "request": "attach",
            "name": "Node: Nodemon",
            "processId": "${command:PickProcess}",
            "restart": true,
            "protocol": "inspector"
				},
            {
                "type": "node",
                "request": "launch",
                "name": "Launch index",
                "program": "${workspaceFolder}/app.js"
        },
        {   
            "name": "Lance movies.ejs",
            "type": "chrome",
            "request": "launch",
            "file":"${workspaceFolder}/views/movies.ejs"

        },
        {   
            "name": "Lance localhost",
            "type": "chrome",
            "request": "launch",
            "url":"http://localhost:3000/movies",
            "webRoot":"${workspaceFolder}/routes/index.js"

        },
    ]
}